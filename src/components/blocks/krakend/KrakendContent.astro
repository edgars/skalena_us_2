	imageHeight: number
	imagePosition: 'left' | 'right'
}
const highlightBlocks: HighlightBlock[] = [
	{
		title: 'Doing right <strong>Since the first time</strong>',
		text: 'At Skalena, we bring unparalleled expertise to help you harness the full potential of the KrakenD API Gateway. Our consulting services are designed to empower your API ecosystem, ensuring seamless integration, robust performance, and tailored solutions that align with your business objectives. .From strategy and architecture design to implementation and optimization, we provide end-to-end support that enhances your API management capabilities. Whether you are deploying KrakenD for the first time or scaling an existing setup, Skalena team of experts ensures a smooth, secure, and high-performing API infrastructure.Let Skalena transform your KrakenD experience, enabling your business to innovate faster, streamline operations, and deliver exceptional value to your clients.',
		image: highlight01,
		imageWidth: highlight01.width,
		imageHeight: highlight01.height,
		mobileImage: highlight01mobile,
		imagePosition: 'left'
	},
]
